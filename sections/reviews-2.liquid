
<style>
   
.reviews{
 position: relative;
 display: flex;
 flex-direction: column;
 align-items: left;
 justify-content: center;
 text-align: bottom;
 max-height: auto;
 width: 100%;
 overflow: hidden;
 z-index: 3;
 
  padding: 50px 0px;
 }

.reviews::before{
{% if section.settings.overlay != blank %}
 content: '';
{%  endif %}
 background: {{section.settings.overlay}}; /*OVERLAY*/
 position: absolute;
 height: 100%;
 width: 100%;
 z-index: 1;
} 
  
  .reviews .container * {
  z-index:2;
  }

.reviews .image-container{
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  width: 100%;
  height: 100%;
  z-index: 0;  
}

.reviews .image-container img {
  min-height: 100%;
  min-width: 100%;
  object-fit: cover;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 20;
}

.testimony-wrap {
     display: flex;
    position: relative;
    background: white;
    padding: 0 30px;
    box-shadow: var(--shadow);
    align-items:center;
    justify-content:center;
    z-index: 3;
    margin-bottom: 20px;
    height: 345px;


}
.testimony-wrap *:not(.imgs){
  z-index: 2;
}
 .testimony-wrap, .testimony-wrap video{
 border-radius: var(--radius);
 
 } 
 .reviews .owl-item{
 padding:18px;
 } 
.testimony-wrap .user-img {
    width: 80px;
    height: 80px;
    position: relative;
    border-radius: 5px; 

}
  .testimony-wrap .name {
    font-weight: 500;
    font-size: 18px;
    margin-bottom: 0;
    color: #000000;
    font-family:"fuente-titulos" !important;
  
  }
  .testimony-wrap .position {
    font-size: 12px;
    color: #ff0000; 
     font-family:"fuente-titulos" !important;
  }
  
  .testimony-wrap .text .star {
    color: #fc9927; 
  }
  
@media (max-width: 768px) {
  .testimony-wrap { 
  padding: 0 10px;
  margin-bottom: 20px;
  

}
  .reviews .owl-item{
     padding:  13px !important;
  }
}


</style>


<section class="reviews position-relative">
 {%  if section.settings.image-fondo != blank  %}
  <div class="image-container imgs">
    
	  <img class="img-fluid imgs" src="{{ section.settings.image-fondo | img_url: 'master' }}"/>
   </div>
   {% endif %}
  <div class="container">
    <div class="title-section col-12 pb-section">
         <h1> {{ section.settings.title }}</h1>
         <h2 > {{ section.settings.subtitle }}</h2>              
    </div>
    <div class="row">
      <div class="col-md-8 px-0">
        <div class="owl-carousel owl-review">
           {% for block in section.blocks %}  
            {%  if block.type == "text" %}
           <div class="item radius ">
               <div class="testimony-wrap py-4 mb-5">
                  <div class="text">
                     <p class="star">
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                     </p>
                     <p style="max-height: 25ex;" class="scrollbar-0  mb-4">{{  block.settings.block_text}}</p>
                     <div class="d-flex align-items-center">
                        <div class="user-img" {%  if block.settings.image-customer !=blank  %}style="background-image: url({{ block.settings.image-customer | img_url: 'master' }}); background-size: cover;" {%  endif %} %}>
                           {%  if block.settings.image-customer ==blank  %} <i class="fa fa-user d-flex justify-content-cneter align-items-center" style="width:100%;height:100%;"></i> {% endif %}
                          </div>
                        <div class="pl-3">
                           <p  class="name">{{block.settings.text}}</p>
                           <span class="position">Customer</span>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
              {% elsif block.type == "Video" %}
                <div class="item">
                    <div class="testimony-wrap p-0 mb-5  position-relative">
   
                         <div class="container-video radius d-flex align-items-center justify-content-center" style="width:100%;height:100%;">
                            <video style="object-fit:cover; width:100%;height:100%;" playsinline src="{{ block.settings.link_video }}" ></video>
                            <i class="playBtn fa-solid fa-play text-primary-light"></i>
                        </div>
              
                   </div>
                </div>

              {% endif %}
            {% endfor %}
        </div>
      </div>
      <div class="col-md-8 text-center">
         <a href="{{ section.settings.button_link }}" class="btn mt-5" data-aos="fade-up" target="_blank"  style="margin-bottom: 50px">
          {{ section.settings.button_label }} 
        </a> 

      </div>
    </div>
  </div>
</section>






