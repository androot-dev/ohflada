
<style>
   
.reviews{
 position: relative;
 display: flex;
 flex-direction: column;
 align-items: left;
 justify-content: center;
 text-align: bottom;
 max-height: auto;
 width: 100%;
 overflow: hidden;
 z-index: 3;
 border-top: 3px solid #e52b34;
  padding: 50px 0px;
 }

.reviews::before{
{% if section.settings.overlay != blank %}
 content: '';
{%  endif %}
 background: {{section.settings.overlay}}; /*OVERLAY*/
 position: absolute;
 height: 200%;
 width: 100%;
 z-index: 1;
} 
  
  

  


@media (max-width: 780px){
.reviews h2{
    font-size:30px;
    line-height:1.3;
    text-align: center;
  }
  

}
  
  
.reviews .image-container{
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  width: 100%;
  height: 100%;
  z-index: 0;  
}

.reviews .image-container img {
  min-height: 100%;
  min-width: 100%;
  object-fit: cover;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 20;
}

.testimony-wrap {
     display: block;
    position: relative;
    background: white;
    padding: 0 20px;
    border: 1px solid rgba(0, 0, 0, 0.02);
    -webkit-box-shadow: 0px 5px 21px -14px rgb(0 0 0 / 14%);
    -moz-box-shadow: 0px 5px 21px -14px rgba(0, 0, 0, 0.14);
    /* box-shadow: rgb(255 0 0 / 40%) -5px 5px, rgb(255 0 0 / 30%) -10px 10px, rgb(255 0 0 / 20%) -15px 15px, rgb(255 0 0 / 10%) -20px 20px, rgb(255 0 0 / 5%) -25px 25px; */
    -webkit-border-radius: 5px;
    -moz-border-radius: 6px;
    -ms-border-radius: 6px;
    border-radius: 6px;
    z-index: 3;
    margin-left: 20px;
    margin-bottom: 20px;
    height: 345px;


}
  
  
.testimony-wrap .user-img {
    width: 80px;
    height: 80px;
    position: relative;
    border-radius: 5px; 

}
  .testimony-wrap .name {
    font-weight: 500;
    font-size: 18px;
    margin-bottom: 0;
    color: #000000;
    font-family:"fuente-titulos" !important;
  
  }
  .testimony-wrap .position {
    font-size: 12px;
    color: #ff0000; 
     font-family:"fuente-titulos" !important;
  }
  
  .testimony-wrap .text .star {
    color: #fc9927; 
  }
  
@media (max-width: 768px) {
  .testimony-wrap { 
  margin-left: 20px;
  margin-bottom: 20px;
   margin-right: 20px;

}
}


</style>


<section class="reviews">
 {%  if section.settings.image-fondo != blank  %}
  <div class="image-container">
    
	  <img class="img-fluid" src="{{ section.settings.image-fondo | img_url: 'master' }}"/>
   </div>
   {% endif %}
  <div class="container">
    <div class="title-section col-12">
         <h1> {{ section.settings.title }}</h1>
         <h2 > {{ section.settings.subtitle }}</h2>              
    </div>
    <div class="row">
      <div class="col-md-8">
        <div class="owl-carousel owl-review">
           {% for block in section.blocks %}  
            {%  if block.type == "text" %}
           <div class="item">
               <div class="testimony-wrap py-4 mb-5">
                  <div class="text">
                     <p class="star">
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                     </p>
                     <p class="mb-4">{{  block.settings.block_text}}</p>
                     <div class="d-flex align-items-center">
                        <div class="user-img" style="background-image: url({{ block.settings.image-customer | img_url: 'master' }}); background-size: cover"></div>
                        <div class="pl-3">
                           <p class="name">{{block.settings.text}}</p>
                           <span class="position">Customer</span>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
              {% elsif block.type == "Video" %}
                <div class="item">
                   
                </div>

              {% endif %}
            {% endfor %}
        </div>
      </div>
      <div class="col-md-8 text-center">
         <a href="{{ section.settings.button_link }}" class="btn mt-5" data-aos="fade-up" target="_blank"  style="margin-bottom: 50px">
          {{ section.settings.button_label }} 
        </a> 

      </div>
    </div>
  </div>
</section>






{% schema %}
  {
    "name": "Reviews",
    "settings": [
      {
			"type": "image_picker",
			"id": "image-fondo",            
            "label": "Image Background"
	  },
      {
		"type": "text",
        "id": "title",
		"label": "Title Section",
        "default": "Reviews"
        
     },
     {
		"type": "text",
        "id": "subtitle",
		"label": "SubTitle Section",
        "default": "What do our customers say"
      },
      {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
	  "default": "Google"
      },
      {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
      },
      
      {
      "type": "text",
      "id": "button_label-2",
      "label": "Button Label",
	  "default": "instagram"
      },
      {
      "type": "url",
      "id": "button_link-2",
      "label": "Button Link"
      },
       {
      "type": "color_background",
      "id": "overlay",
      "label": "Overlay"
      }

    ],
     "blocks": [
         {
       "type": "text",
        "name": "Review", 
        "settings": [     
                {
                    "type": "text",
                    "id": "text",
                    "label": "Name Customer",
                  "default": "Review"
                  },    
                  {
                    "type": "image_picker",
                  "id": "image-customer",            
                      "label": "Image Customer"
                },
                  {
                    "type": "textarea",
                    "id": "block_text",
                    "label": "Content Review"
                  }     
                ]
          },
          {
          "type": "Video",
          "name": "Video",
          "settings": [
            {
              "type": "text",
              "id": "name_costumer",
              "label": "Title",
              "default": "Jhon Doe"
            },
            {
              "type": "url",
              "id": "link_video",
              "label": "Link Video" 
            }
          ]
          }
     ],
   
  	"presets": [
      {
        "category": "Home",
        "name": "Review"     
        
      }
    ]
  }
{% endschema %}

