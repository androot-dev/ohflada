{% schema %}
  {
    "name": "Section name",
    "settings": [
	{
        "type": "text",
        "id": "title-section",
        "label": "Title Section",
        "default": "Gallery"
    },
    {
        "type": "text",
        "id": "subtitle-section",
        "label": "Title Section",
        "default": "Check out our delicious work"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding bottom",
      "default": 52
    }
    ]
  }
{% endschema %}

 <section class=" section-{{ section.id }}-padding section-{{ section.id }}   m-0 faq my-section container-fluid position-relative">
    <div class="page-width container-fluid">

      <div class="title-section pb-element">
          
          <h1> {{ section.settings.title-section }}</h1>
          <h2>{{ section.settings.subtitle-section }}</h2>                      
         </div>
    </div>

 </section>

