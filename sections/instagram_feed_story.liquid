<section class="section-{{ section.id }} py-section">
  <div class="container-fluid page-width">
    <div class="row ">
      <div class="title-section pb-element">
        <h1> {{ section.settings.title-section }} </h1>
        <h2>{{  section.settings.subtitle }}</h2>
      </div>
    </div>
        <div id="instagram-stories-box"></div>
        <div id="instagram-feed-box"></div>

    
  </div>
</section>

<style>
.splide-img{
    border-radius: var(--radius);
   
}
  #instagram-feed-box #instafeed .instagram-grid-container .ingtagram-grid-item{

     border-radius: var(--radius);
     box-shadow: var(--shadow);

    width: 250px !important;
    height: 250px !important;
    max-width: none !important;
    max-height: none !important;
    
  }
  
#instagram-feed-box > p{
  display:none;
}
.section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
}
.section-{{ section.id }} {
  height:auto;
}


  </style>
<script async src="https://d12oh2gzettinl.cloudfront.net/instagram-story/shopify-script-glider-local.js"></script>
{% schema %}
{
	"name": "Instagram Feed/Story",
	"settings": [

      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding_bottom",
      "default": 52
    },
	{
		"type": "text",
		"id": "title-section",
		"label": "Title",
		"default": "Instagram Feed"
	},
	{
		"type": "text",
		"id": "subtitle",
		"label": "Subtitle",
		"default": "Follow us now and don't miss our best works"
	}
    ],
	"presets": [
		{
			"name": "Instagram Feed/Story", "settings": {}
		}
	]
}
{% endschema %}