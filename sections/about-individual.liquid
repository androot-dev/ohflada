.scanfcode-2
{
  background-color: #ff0000;
  border:0px;
  color:#fff;
  font-family: 'fuente-titulos', Arial, sans-serif;
  font-size:16px;
  margin:28px 10px;
  position:relative;
  text-transform:uppercase;
  z-index: 3;
  padding: 5px 10px;
  padding-bottom: 5px;
  border-radius: 6px;
}
.scanfcode-2:before,
.scanfcode-2:after {
  border-color: #ff5050;
  -webkit-transition: all 0.25s;
  transition: all 0.25s;
  border-style: solid;
  border-width: 0;
  content:"";
  height: 24px;
  position: absolute;
  width: 24px;
  
}
.scanfcode-2:before {
  border-left-width: 2px;
  border-top-width: 2px;
  left: -5px;
  top: -5px;
  border-radius: 6px 0px 0px 0px;
}

.scanfcode-2:after {
  border-bottom-width: 2px;
  border-right-width: 2px;
  bottom: -5px;
  right: -5px;
  border-radius: 0px 0px 6px 0px;
}
.scanfcode-2:hover:before,
.scanfcode-2:hover:after
{
  height:100%;
  width:100%;
    
}

