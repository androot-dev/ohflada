         <div class="">
         <div class="col-12 text-left ">
         <h2> {{ section.settings.title }}</h2>
         <p class="subtitle"> {{ section.settings.subtitle }}</p>              
         </div>
         <!--<div class=" py-4 content-text">
           {{ section.settings.block_text }}
         </div>-->
           
