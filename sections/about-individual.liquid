<style>  
  .about-individual{
   
    padding-top: 50px;
    padding-bottom: 40px;
    position: relative;
    overflow: hidden;
  }
  

  
 .about-individual h2{
   color: #383838;
   font-size:30px;
   font-weight:300;
   line-height:1.3;
  }
  
  
.about-individual .subtitle {
   color:#ff0000;
   font-size:18px;
   margin-top: -20px;
   margin-bottom: 20px;   
}

@media (max-width: 575px){
.about-individual h2{
    font-size:30px;
    line-height:1.3;
    text-align: center;
  }
  
.about-individual .subtitle {
   text-align: center;   
}
}
  

  
 
.about-individual p {
  font-size: 16px;  
  font-weight: 500;
  margin-top:-10px;
  position: relative;
  z-index: 2;  
  color: #383838;   
}
  





  
.about-individual .img-1{
  width: 450px;
  height: 450px;  
  z-index: 3;
  position: relative;
  border: 4px solid #fff;
  box-shadow: rgba(255, 0, 0, 0.4) 5px 5px, rgba(255, 0, 0, 0.3) 10px 10px, rgba(255, 0, 0, 0.2) 15px 15px, rgba(255, 0, 0, 0.1) 20px 20px, rgba(255, 0, 0, 0.05) 25px 25px;
  border-radius: 6px;
  transition: 3s;
}

  .about-individual  :hover .img-1{
  transform: rotate(10deg);
  
}

.about-individual .about-us-square:after{
  
  position: absolute;
  top: -10%;
  left: -3%;
  width: 500px;
  height: 500px; 
  content: '';
  background-image: linear-gradient(to left bottom, #858383, #999797, #aeacac, #c3c1c1, #d9d7d7);
  z-index: 1;
  border-radius: 10px;
}
  

  
  @media only screen and (max-width: 767px) {
  

    
.about-individual .img-1 {
    height: 365px;

}
  
     
.about-individual p {
  text-align: center;
}
  }
  



  .mb-ek{
   margin-bottom: -30px;
  }
  
  .content-button{
    text-align: right;
  
  }
    
  @media only screen and (max-width: 767px) {
    
    .content-button{
    text-align: center;
  
  }
  
  }

</style>
<section class="about-individual">
 
  <div class="container">
    <div class="row">
     
       <div class="col-md-6 ">
         <div class="">
         <div class="col-12 text-left ">
         <h2> {{ section.settings.title }}</h2>
         <p class="subtitle"> {{ section.settings.subtitle }}</p>              
         </div>

               
       <div class="owl-about owl-carousel">
            <div class="item my-3 mb-5" data-hash="en">
               {{ section.settings.block_text }}
                 <div class=" col-12 mt-5 text-lg-left text-center ">
                  <a href="{{ section.settings.button_link }}" class="btn mt-5" data-aos="fade-up" >
                    {{ section.settings.button_label }}
                  </a>
                 </div>           
            </div>
            <div class="item mt-3 mb-5 text-right" data-hash="ar">
               {{ section.settings.block_text-2 }}
               <div class=" col-12 mt-5 text-lg-left text-center ">
                  <a href="{{ section.settings.button_link }}" class="btn mt-5" data-aos="fade-up" >
                    {{ section.settings.button_label }}
                  </a>
                 </div>
            </div>
            <div class="item mt-3" data-hash="ch">
               {{ section.settings.block_text-3 }}
               <div class=" col-12 mt-5 text-lg-left text-center ">
                  <a href="{{ section.settings.button_link }}" class="btn mt-5" data-aos="fade-up" >
                    {{ section.settings.button_label }}
                  </a>
               </div>
            </div>
            
        </div>
         
        
          
           </div>

       
         
           
        </div>
         
      </div>
       <div class="col-md-6 d-flex justify-content-center align-items-center">
        <img class="img-fluid img-1 my-5" src="{{ section.settings.image-1 | img_url: 'master' }}" data-aos="zoom-in" />
        
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "About Us",
    "settings": [
	{
		"type": "text",
        "id": "title",
		"label": "Title Section",
        "default": "About"
        
     },
     {
		"type": "text",
        "id": "subtitle",
		"label": "SubTitle Section",
        "default": "Subtitle"
      },
     {
	     "type": "richtext",
          "id": "block_text",
          "label": "Content Text English"
     },
     {
	     "type": "richtext",
          "id": "block_text-2",
          "label": "Content Text Arabe"
     },
     {
	     "type": "richtext",
          "id": "block_text-3",
          "label": "Content Text Chinesse"
     },
     {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
	  "default": "Read More"
      },
      {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
      },
	  {
	   "type": "image_picker",
	   "id": "image-1",            
        "label": "Image About 1"
	  }
     
	]
  }
{% endschema %}
