<section class="about-individual">
 
  <div class="container">
    <div class="row">
     <div class="col-12 title-section align-items-center py-section">
         <h1> {{ section.settings.title }}</h1>
         <h2 > {{ section.settings.subtitle }}</h2>              
      </div>
      
      
      <div class="col-6 ">
  

         {{ section.settings.block_text }}
         
           
        </div>
         
      </div>
       <div class="col-6 d-flex justify-content-center align-items-center">
        <img class="img-fluid img-1 my-5" src="{{ section.settings.image-1 | img_url: 'master' }}" data-aos="zoom-in" />
        
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "About Us",
    "settings": [
	{
		"type": "text",
        "id": "title",
		"label": "Title Section",
        "default": "About"
        
     },
     {
		"type": "text",
        "id": "subtitle",
		"label": "SubTitle Section",
        "default": "Subtitle"
      },
     {
	     "type": "richtext",
          "id": "block_text",
          "label": "Content Text English"
     },
     {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
	  "default": "Read More"
      },
      {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
      },
	  {
	   "type": "image_picker",
	   "id": "image-1",            
        "label": "Image About 1"
	  }
     
	]
  }
{% endschema %}
