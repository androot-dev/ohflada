/* HIGHLIGHT */
.highlight {
		display: inline-block;
		color: #d6b76c;
		background: #fff;
		margin: 20px;
		width: 180px;
		height: 46px;
		line-height: 40px;
		border-radius: 25px;
		position: relative;
		overflow: hidden;
        z-index: 3;
     
        text-align:center;
        border: 3px solid #d6b76c;
}

.highlight:before {
		content: "";
		position: absolute;
		top: -30px;
		left: -80px;
		height: 100px;
		width: 70px;
		background: rgba(0, 0, 0, .3);
		transform: rotate(20deg);
}

.highlight:hover:before {
		left: 200px;
		transition: all .4s;
}
  
.highlight:hover{
		color: #fff;
}
.highlight {margin-bottom:100px;}
  

.icons-contact{
   font-size: 20px;
    position: absolute;
    z-index: 3;
