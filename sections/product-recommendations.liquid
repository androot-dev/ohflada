      </div>
      {%- endif -%}
      <div class=container>
         <div class="row">
            {%- for product in recommendations.products limit:3-%}
            <div class="col-md-4 d-flex align-items-center justify-content-center">
               {% render 'product-card-grid-recommedations', max_height: 250, product: product %}
             
            </div>
            {%- endfor -%}
         </div>
      </div>
   </div>
   {%- endif -%}
   {%- else  -%}
   <div class="page-width" data-base-url="{{ routes.product_recommendations_url }}" data-product-id="{{ product.id }}" data-section-id="{{ section.id }}" data-section-type="product-recommendations"></div>
   {%- endif -%}
   {%- endif -%}
