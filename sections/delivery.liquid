     "id": "image",
      "label": "Select a Image"
    },
      {
	 "type": "color_background",
     "id": "overlay",
      "label": "overlay" 
    },
      {

  	 "type": "text",
       "id": "icon1",
        "label": "Icon",
        "default": "fa-solid fa-moped"
      },
      {

  	 "type": "text",
       "id": "icon2",
        "label": "Icon",
        "default": "fa-solid fa-moped"
      },
      {

  	 "type": "text",
       "id": "icon3",
        "label": "Icon",
        "default": "fa-solid fa-moped"
      }
    ],
  	"presets": [
      {
