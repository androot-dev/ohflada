  <div class="container">
    <div class="row">
     
       <div class="col-md-6 d-flex align-items-center justify-content-center">
         <div class="">
         <div class="col-12 text-left px-0">
          <div class="title-section">
            <h1 class="title-primary"> {{ section.settings.title }}</h1>
            <h2 class="title-secondary"> {{ section.settings.subtitle }}</h2>  
          </div>            
         </div>
         <p class=" py-4 content-text">
           {{ section.settings.block_text }}
         </p>
         <div class=" col-12 mt-5 text-lg-left text-center ">
        <a href="{{ section.settings.button_link }}" class="btn mt-5" data-aos="fade-up" >
          {{ section.settings.button_label }}
        </a>
           
       </div>
