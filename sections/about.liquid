{% schema %}
  {
    "name": "About Us",
    "settings": [
	{
		"type": "text",
        "id": "title",
		"label": "Title Section",
        "default": "About"
        
     },
     {
		"type": "text",
        "id": "subtitle",
		"label": "SubTitle Section",
        "default": "Subtitle"
      },
