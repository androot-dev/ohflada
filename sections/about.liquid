<style>  
  .about-us{
    background: var(--primary-light);
    padding-top: 50px;
    padding-bottom: 40px;
    position: relative;
    overflow: hidden;
  }
  

  
  
.about-us .subtitle {
 
   margin-bottom: 20px;   
}

@media (max-width: 575px){
   .about-us h2{
    font-size:30px;
    line-height:1.3;
    text-align: center;
  }
  
  .about-us .subtitle {
   text-align: center;   
}
}
  

  
 
.about-us p {
  font-size: 16px;  
  font-weight: 500;
  margin-top:-10px;
  position: relative;
  z-index: 2;  
  color: #fff;   
}
  





  
.about-us .img-1{
  width: 450px;
  height: 450px;  
  z-index: 0;
  position: relative;
  border: 4px solid #fff;
  box-shadow: rgba(255, 0, 0, 0.4) 5px 5px, rgba(255, 0, 0, 0.3) 10px 10px, rgba(255, 0, 0, 0.2) 15px 15px, rgba(255, 0, 0, 0.1) 20px 20px, rgba(255, 0, 0, 0.05) 25px 25px;
  border-radius: var(--radius);
 transition: 3s;
 object-fit: cover;
}

  .about-us :hover .img-1{
  transform: rotate(10deg);
  
}

.about-us .about-us-square:after{
  
  position: absolute;
  top: -10%;
  left: -3%;
  width: 500px;
  height: 500px; 
  content: '';
  background-image: linear-gradient(to left bottom, #858383, #999797, #aeacac, #c3c1c1, #d9d7d7);
  z-index: 1;
  border-radius: 10px;
}
  

  
  @media only screen and (max-width: 767px) {

    .about-us .img-1 {
    height: 365px;

}
    
 .about-us p {
text-align: center;
}
  
  }
  
