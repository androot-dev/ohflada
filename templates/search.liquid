<style>

.busqueda {
  position: relative;
  padding-top: 30px;
  padding-bottom: 80px;
  overflow: hidden;
}
  


 .busqueda input{
     /* border: 2px solid #d8d8d8; */
    background: rgb(255,255,255, 0.5);
    /* margin-top: 20px; */
    box-shadow: var(--shadow);
