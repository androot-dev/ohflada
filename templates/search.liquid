 }
 
.search-form__input {
    padding-right: 45px;
    width: 100%;
     border: 1px solid transparent !importants;
    min-height: 44px;
    color: var(--color-text-field-text);
    background-color: var(--color-text-field);
    border: none;
      
}
.predictive-search-title__content {
  flex: 1 1 auto;
  margin-bottom: 0;
  padding-right: 40px; 
  text-transform: none !important;
  color:#383838 !important;
  white-space: normal; 
    
}

.busqueda .input-group>:not(:first-child):not(.dropdown-menu):not(.valid-tooltip):not(.valid-feedback):not(.invalid-tooltip):not(.invalid-feedback) {
  background-color: #ff0000 !important;
  border-radius: 0px var(--radius) var(--radius) 0px;!important;
  padding: 10px 14px; 
  position: relative;
  z-index: 1;
  overflow: hidden;
  display: inline-block;  
  font-family: "fuente-contenido" !important;
  transition: 0.6s;
  fill: #383838;
  
  
}
  
  
.busqueda .input-group button:before,
.busqueda .input-group button:after {
  border-color: #ff5050;
  -webkit-transition: all 0.25s;
  transition: all 0.25s;
  border-style: solid;
  border-width: 0;
  content:"";
  height: 24px;
  position: absolute;
  width: 24px;
  border-radius: var(--radius) var(--radius) var(--radius) var(--radius);
}
.busqueda .input-group button:before {
  border-left-width: 2px;
  border-top-width: 2px;
  left: -5px;
  top: -5px;
}

.busqueda .input-group button:after {
  border-bottom-width: 2px;
  border-right-width: 2px;
  bottom: -5px;
  right: -5px;
}
.busqueda .input-group button:hover:before,
.busqueda .input-group button:hover:after
{
  height:100%;
  width:100%;
}

  
.busqueda .input-group button:hover {
  transition: 0.6s;
  border-radius: 0px;
  margin-left: 30px;
 
}
  
  
