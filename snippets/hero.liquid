
{% assign heroImageLocal = image-hero-local %}
{% assign heroImageGlobal = settings.subpage_hero_background  %}
{% assign heroVideoGlobal = settings.subpage_hero_background_video %}

{% assign video = false  %}
{% assign hero = "" %}

{%  if heroImageLocal == blank %}

{% if heroVideoGlobal == blank %}
  

{% assign hero = heroImageGlobal %}
 

  
{% else %}
  
    {% assign hero = heroVideoGlobal %}
    {% assign video = true %}

  
{% endif %}
{% else  %}
  {% assign hero = heroImageLocal %}
 {% endif %}





 <!--==========================
      SECCION HERO SUBPAGINAS
 ============================-->
<section class="hero-sub breadcrumb-area spad bg-img bg-overlay bg-img-hero section-{{ section.id }}">
     {% if video %}
      <video autoplay="" muted="" loop="" playsinline>
	    	 <source src="{{ hero }}" type="video/mp4">
	  </video>
      <style>
        .section-{{ section.id }} video{
          object-fit:cover;
          object-position:center;
          width:100%;
          height:100%;
          position:absolute;
          top:0;
          left:0;
          z-index:-1;
        }
      </style>

       
        {% else %}
             
        <style>
             .section-{{ section.id }}{
               background-image:  url('{{ hero | img_url: 'master' }}');
             }
        </style>
      
      {% endif %}
      
       {% if page.title %}
         {%  assign title = page.title %}
      
        {%  else %}
         {%  if template.name == "collection" %}
         {%  assign title = "Products" %}
          
           {% else %}
          {%  assign title = template.name %}
           {% if title == "product" %}
            
              {%  for collection in product.collections limit:1 %} 
                {% assign title = collection.title %}
                {% endfor %}
          {% endif %}


  
           {% endif %}
{%  endif %}     
  <div class="container">
            <div class="row align-items-center">
                <div class="col-12">
                    <div class="breadcrumb-content" data-aos="fade-up">
                        <h2>
                          {{ title }}
                        </h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ routes.root_url }}">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                 {{ title }}
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
</section>

